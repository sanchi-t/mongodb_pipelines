[
  {
    $match: {
      year: {
        $lt: 1950,
      },
      "imdb.rating": {
        $gte: 7,
      },
    },
  },
  {
    $lookup: {
      from: "comments",
      localField: "_id",
      foreignField: "movie_id",
      as: "comments",
    },
  },
  {
    $project: {
      _id: 0,
      title: 1,
      releaseYear: "$year",
      imdbRating: "$imdb.rating",
      genres: 1,
      comments: {
        $slice: ["$comments", 2],
      },
      comments: {
        name: 1,
        text: 1,
      },
    },
  },
]
